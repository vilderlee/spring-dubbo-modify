<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:user="http://spring.vilderlee.com/schema/user"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://spring.vilderlee.com/schema/user http://com.vilderlee.com/schema/user/user.xsd
">

    <user:registry host="zookeeper://localhost:2181"></user:registry>

    <user:service id="helloService" interface="com.study.HelloService" ref="helloServiceImpl"></user:service>

    <bean id="helloServiceImpl" class="com.study.HelloServiceImpl"></bean>
</beans>